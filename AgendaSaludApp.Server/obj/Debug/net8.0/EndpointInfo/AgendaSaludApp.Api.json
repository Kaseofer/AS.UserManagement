{
  "openapi": "3.0.1",
  "info": {
    "title": "AgendaSaludApp.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/Pacientes/{id}": {
      "get": {
        "tags": [
          "Pacientes"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Pacientes/Guardar": {
      "post": {
        "tags": [
          "Pacientes"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PacienteDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PacienteDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PacienteDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Pacientes/Lista": {
      "get": {
        "tags": [
          "Pacientes"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PacienteDto": {
        "required": [
          "apellido",
          "dni",
          "fechaNacimiento",
          "nombre",
          "sexo"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "nombre": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "apellido": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "dni": {
            "maxLength": 20,
            "minLength": 1,
            "type": "string"
          },
          "fechaNacimiento": {
            "type": "string",
            "format": "date"
          },
          "sexo": {
            "maxLength": 10,
            "minLength": 1,
            "type": "string"
          },
          "telefono": {
            "maxLength": 20,
            "type": "string",
            "nullable": true
          },
          "email": {
            "maxLength": 100,
            "type": "string",
            "format": "email",
            "nullable": true
          },
          "direccion": {
            "maxLength": 200,
            "type": "string",
            "nullable": true
          },
          "observaciones": {
            "maxLength": 500,
            "type": "string",
            "nullable": true
          },
          "activo": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    }
  }
}